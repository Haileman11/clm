generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(cuid())
  keycloakId String    @unique
  email      String    @unique
  firstName  String
  lastName   String
  department String
  role       UserRole
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  Contract   Contract? @relation(fields: [contractId], references: [id])
  contractId String?
}

enum UserRole {
  CONTRACT_MANAGER
  CONTRACT_OWNER
  CATEGORY_SOURCING_MANAGER
  LEGAL_TEAM
}

enum VendorStatus {
  ACTIVE
  INACTIVE
  PENDING
}

model Vendor {
  id                String       @id @default(cuid())
  name              String
  vendorNumber      String       @unique
  supplierService   String
  vatRegistrationId String
  address           String
  country           String
  status            VendorStatus @default(ACTIVE)
  parentVendor      Vendor?      @relation("VendorHierarchy", fields: [parentVendorId], references: [id])
  parentVendorId    String?
  subVendors        Vendor[]     @relation("VendorHierarchy")
  contracts         Contract[]
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt
}

model Contract {
  id                String         @id @default(cuid())
  contractNumber    String         @unique
  name              String
  effectiveDate     DateTime
  expirationDate    DateTime
  clientLegalEntity String
  termType          String
  contractType      String
  supplierService   String
  country           String
  currency          String
  totalValue        Float
  status            ContractStatus @default(NEW)
  vendor            Vendor         @relation(fields: [vendorId], references: [id])
  vendorId          String
  stakeholders      User[]
  createdAt         DateTime       @default(now())
  updatedAt         DateTime       @updatedAt
  attachments       Attachment[]
}

model Attachment {
  id         String     @id @default(cuid())
  name       String
  url        String
  type       String
  size       Int
  uploadedBy String
  uploadedAt DateTime   @default(now())
  contracts  Contract[]
}

enum ContractStatus {
  NEW
  REVIEWED
  ACTIVE
  EXPIRED
  RENEWED
  INACTIVE
  TERMINATED
}
